{% extends 'front/layout.twig' %}
{% block main %}
<section class="main-slider">
	<ul class="bxslider">
		
		{% for post in featuredPosts|slice(0, 3) %}
			<li>
				<div class="slider-item">
					<img src="https://s3-ap-southeast-2.amazonaws.com/sncblog/post_images/{{post.image_path}}" title="Funky roots" />
					<h2><a href="/post/{{post['post_id']}}" title="Vintage-Inspired Finds for Your Home">{{post.title}}</a></h2>
				</div>
			</li>
		{% endfor %}

	</ul>
</section>

<section>
	<div class="row">
		<div class="col-md-8">
		
			{% for post in recentPosts %}
				<article class="blog-post">
					<div class="blog-post-image">
						<a href="/post/{{post['post_id']}}">
							<img src="https://s3-ap-southeast-2.amazonaws.com/sncblog/post_images/{{post.image_path}}" alt=''>
						</a> 
					</div>
					<div class="blog-post-body">
						<h2><a href="/post/{{post['post_id']}}">{{ post.title }}</a></h2>
						<div class="post-meta"><span>by <a href="/post/{{post['post_id']}}">{{ post.author_full_name }}</a></span>/<span><i class="fa fa-clock-o"></i>{{ post.published | date("F jS \\a\\t g:ia") }}</span>/<span><i class="fa fa-comment-o"></i> <a href="/post/{{post['post_id']}}">{{ post.comments_count}}</a></span></div>
						<p>{{ post.content|raw }}</p>
						<div class="read-more"><a href="/post/{{post['post_id']}}">Continue Reading <span>&#187;</span></a></div>
					</div>
				</article>

			{% endfor %}
		</div>
		<div class="col-md-4 sidebar-gutter">
			<aside>
				{% include 'front/includes/sidebar.twig'  %}
			</aside>
		</div>
	</div>
</section>
{% endblock main %}	
				
	
{% extends 'admin/layout_admin.twig' %}
{% block main %}
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
            All Users
        </h2>
         <div class="btn-group btn-breadcrumb breadcrumb">
            <a href="{{path_for('admin.dashboard')}}" class="btn btn-default"><i class="glyphicon glyphicon-home"></i> Dashboard</a>
             <a href="/posts" class="btn btn-info">Users</a>
          </div>
    </div>
</div>
<!-- /.row -->
<div class="col-xs-12">
    <table class="table table-striped table-bordered table-hover">
      <thead class="">
        <tr>
          <th>Id</th>
          <th>First Name</th>
          
          <th>Last Name</th>
          <th>Email</th>
          <th>Role</th>
          <th colspan="2">Actions</th>

        </tr>
      </thead>
      <tbody>
        
        
          {% for user in users %}
        	 <tr> 
              <td>{{ user.user_id }}</td>
              <td>{{ user.first_name }}</td>
              <td>{{ user.last_name }}</td>
              <td>{{ user.user_email }}</td>
              <td>{{ user.role_id }}</td>
              <td><a class ="btn btn-warning" href="/user/{{user.user_id}}/edit">Edit</a></td>
              <td><a class ="btn btn-danger" href="/user/{{user.user_id}}/delete">Delete</a></td>
            </tr>	
          {% endfor %}
      </tbody>
  </table>
 </div>
{% endblock main %}



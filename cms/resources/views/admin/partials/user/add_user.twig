{% extends 'admin/layout_admin.twig' %}
{% block main %}
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
           Add User
        </h2>
         <div class="btn-group btn-breadcrumb breadcrumb">
            <a href="{{path_for('admin.dashboard')}}" class="btn btn-default"><i class="glyphicon glyphicon-home"></i> Dashboard</a>
             <a href="/users" class="btn btn-default">Users</a>
            <a href="#" class="btn btn-info">Add</a>
          </div>
    </div>
</div> 
<!-- /.row -->
<div class="col-xs-12">
  
  {% if errors is not empty %}
    <div class="alert alert-danger">
      {% for e in errors %}

        <p>{{ e[0] }}</p>

      {% endfor %}
    </div>
  {% endif %}
  <form method="post"  action="{{ path_for('admin.postUser') }}">

    <div class="form-group">
      <label for="title">Last Name</label>
      <input type="text" class="col-xs-6 form-control" id="title" name="last_name" value="{{ oldInput.last_name}}">
    </div>
   
    <div class="form-group">
      <label for="title">First Name</label>
      <input type="text" class="col-xs-6 form-control" id="title" name="first_name"  value="{{ oldInput.first_name}}">
    </div>
    
    <div class="form-group">
      <label for="title">Email</label>
      <input type="email" class="col-xs-6 form-control" id="title" name="email" value="{{ oldInput.email}}">
    </div>
    
    <div class="form-group">
      <label for="title">Password</label>
      <input type="password" class="col-xs-6 form-control" id="title" name="password" value="{{ oldInput.password}}">
    </div>
    
    <div class="form-group">
      <label for="title">Role</label>
      <select name ="role" class="form-control">

        {% for role in roles %}
          <option value="{{role.role_id}}">{{role.role | capitalize}}</option>
        
        {% endfor %}
      </select>
    </div>
   
   
    <button type="submit" class="btn btn-success" name="submit">Submit</button>
    {{ csrf.field | raw }}
  </form>

 </div>
{% endblock main %}

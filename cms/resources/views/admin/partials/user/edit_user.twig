{% extends 'admin/layout_admin.twig' %}
{% block main %}
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
           Edit User
        </h2>
         <div class="btn-group btn-breadcrumb breadcrumb">
            <a href="{{path_for('admin.dashboard')}}" class="btn btn-default"><i class="glyphicon glyphicon-home"></i> Dashboard</a>
             <a href="/users" class="btn btn-default">Users</a>
            <a href="#" class="btn btn-info">Edit</a>
          </div>
    </div>
</div> 
<!-- /.row -->
<div class="col-xs-12">
  {% if errors is not empty %}
    <div class="alert alert-danger">
      {% for e in errors %}

        <p>{{ e | first }}</p>

      {% endfor %}
    </div>
  {% endif %}
  <form method="post"  action="/user/{{user.user_id}}/update">

    <div class="form-group">
      <label for="title">Last Name</label>
      <input type="text" class="col-xs-6 form-control" id="title" name="last_name" value={{ user.first_name}}>
    </div>
    
    
    <div class="form-group">
      <label for="title">First Name</label>
      <input type="text" class="col-xs-6 form-control" id="title" name="first_name"  value={{ user.last_name}}>
    </div>
    

    <div class="form-group">
      <label for="title">Email</label>
      <input type="email" class="col-xs-6 form-control" id="title" name="email" value={{ user.user_email}}>
    </div>
    

    <div class="form-group">
      <label for="title">Role</label>
      <select name ="role" class="form-control">
        <option value="1" {% if user.role_id==1 %} selected="selected" {% endif %}>Admin</option>
        <option value="2" {% if user.role_id==2 %} selected="selected" {% endif %}>Author</option>
        <option value="3" {% if user.role_id==3 %} selected="selected" {% endif %}>Subscriber</option>
      </select>
    </div>
   
   
    <button type="submit" class="btn btn-success" name="submit">Update</button>
    {{ csrf.field | raw }}
  </form>
 </div>
{% endblock main %}

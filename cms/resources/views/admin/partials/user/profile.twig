{% extends 'admin/layout_admin.twig' %}
{% block main %}
<!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="page-header">
                           Profile
                        </h2>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-file"></i> Blank Page
                            </li>
                        </ol>
                    </div>
                </div> 
                <!-- /.row -->
<div class="col-xs-12">
  {% if errors is not empty %}
    <div class="alert alert-danger">
  {% for e in errors %}

  <p>{{ e[0] }}</p>

  {% endfor %}
</div>
{% endif %}
<form method="post"  action="{{ path_for('user.updateProfile') }}">

  <div class="form-group">
    <label for="title">First Name</label>
    <input type="text" class="col-xs-6 form-control" id="title" name="first-name" value="{{user.first_name}}">
  </div>
  <div class="form-group">
    <label for="title">Last Name</label>
    <input type="text" class="col-xs-6 form-control" id="title" name="last-name" value="{{user.last_name}}" >
  </div>
  <div class="form-group">
    <label for="title">Email</label>
    <input type="email" class="col-xs-6 form-control" id="title" name="email" value="{{user.user_email}}">
  </div>
 
  <br><br>
  <button type="submit" class="btn btn-success" name="submit">Update</button>
  {{ csrf.field | raw }}
</form>


 </div>
{% endblock main %}

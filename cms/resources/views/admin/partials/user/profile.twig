{% extends 'admin/layout_admin.twig' %}
{% block main %}
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
           Profile
        </h2>
         <div class="btn-group btn-breadcrumb breadcrumb">
            <a href="{{path_for('admin.dashboard')}}" class="btn btn-default"><i class="glyphicon glyphicon-home"></i> Dashboard</a>
             <a href="/users" class="btn btn-default">Users</a>
            <a href="#" class="btn btn-info">Profile</a>
          </div>
    </div>
</div> 
<!-- /.row -->
<div class="col-xs-12">
  {% if errors is not empty %}
    <div class="alert alert-danger">
      {% for e in errors %}

        <p>{{ e[0] }}</p>

      {% endfor %}
    </div>
  {% endif %}

  <form method="post"  action="{{ path_for('user.updateProfile') }}" enctype="multipart/form-data">

    <div class="form-group">
      <label for="title">First Name</label>
      <input type="text" class="col-xs-6 form-control" id="title" name="first_name" value="{{user.first_name}}">
    </div>
    

    <div class="form-group">
      <label for="title">Last Name</label>
      <input type="text" class="col-xs-6 form-control" id="title" name="last_name" value="{{user.last_name}}" >
    </div>
    

    <div class="form-group">
      <label for="title">Email</label>
      <input type="email" class="col-xs-6 form-control" id="title" name="email" value="{{user.user_email}}">
    </div>
    

    <div class="form-group">
      <label for="profile-image">Image</label>
      <input type="file" class=""  name="profile_image">
    </div>
   
    <br><br>
    <button type="submit" class="btn btn-success" name="submit">Update</button>
    {{ csrf.field | raw }}
  </form>

 </div>
{% endblock main %}

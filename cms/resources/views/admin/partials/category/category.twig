{% extends 'admin/layout_admin.twig' %}
{% block main %}
<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">
           Category
        </h2>
      
    </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="btn-group btn-breadcrumb">
            <a href="{{path_for('admin.dashboard')}}" class="btn btn-default"><i class="glyphicon glyphicon-home"></i> Dashboard</a>
            <a href="/category" class="btn btn-info">Category</a>
         
    </div>
  </div>
</div>

<!-- /.row -->
<div class="row">
  <div class="col-xs-6">
      {% if errors is not empty %}
    
        <div class="alert alert-danger">
          {% for e in errors %}

            <p>{{ e[0] }}</p>

          {% endfor %}
        </div>
      {% endif %}

      <form method="post" action="/category">
        <div class="form-group">
          <label for="email">Add Category</label>
          <input type="text" class="form-control" id="email" name="category" placeholder="Enter email">
        </div>
    
        <button type="submit" class="btn btn-success" name="submit">Add Category</button>
        {{ csrf.field | raw }}
      </form>
      <br>

      {% if editMode == TRUE and editCategory is not empty %}
        <form method="post" action="/category/{{editCategory.cat_id}}">
    
          <div class="form-group">
            <label for="email">Update Category</label>
            <input type="text" class="form-control" id="email" name="category" value="{{editCategory.cat_title}}" placeholder="Enter email">
          </div>
    
          <button type="submit" class="btn btn-primary" name="update-category">Update Category</button>
    
          {{ csrf.field | raw }}
        
        </form>
      {% endif %}
  </div>
   <div class="col-xs-6">
      
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Id</th>
            <th>Category</th>
             <th colspan="2">Actions</th>
          </tr>
        </thead>
        
        <tbody>
          
          {% for item in category %}
     
            <tr> 
              <td>{{item.cat_id}}</td>
              <td>{{item.cat_title}}</td>
              <td><a class ="btn btn-warning" href="/category/{{item.cat_id}}/edit">Edit</a></td>
              <td><a class ="btn btn-danger" href="/category/{{item.cat_id}}/delete">Delete</a></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  <!-- /.row -->
{% endblock main %}
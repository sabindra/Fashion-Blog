{% extends 'admin/layout_admin.twig' %}
{% block main %}
<!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h2 class="page-header">
                            Comments
                        </h2>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-file"></i> Blank Page
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
<div class="col-xs-12">
                         <table class="table table-striped table-bordered table-hover">
    <thead class="">
      <tr>
        <th>Id</th>
        <th>Comment Author</th>
        
        <th>Email</th>
        <th>Comment</th>
        <th>Status</th>
        <th>Post ID</th>
        <th>Commment Date</th>
        <th colspan="3">Actions</th>
       

      </tr>
    </thead>
    <tbody>
      
      {% for item in comments %}
      	<tr> 
        <td>{{item.comment_id }}</td>
        <td>{{item.comment_author}}</td>

        <td>{{ item.comment_author_email }}</td>
        <td>{{  item.comment }}</td>
        <td>{{  item.comment_status }}</td>
        <td>{{  item.comment_post_id }}</td>
        <td>{{  item.comment_date }}</td>
        
        
        
 
        <td><a class ="btn btn-success {% if item.comment_status == 'approved' %} disabled {% endif %}" href="/comment/{{item.comment_id}}/approve">Approve</a></td>
        <td><a class ="btn btn-warning {% if item.comment_status == 'unapproved' %} disabled {% endif %}" href="/comment/{{item.comment_id}}/unapprove">Block</a></td>
         <td><a class ="btn btn-danger" href="/comment/{{item.comment_id}}/delete">Delete</a></td>
      </tr>

      	
      {% endfor %}
       
     
    </tbody>
  </table>
  <div class="row">
    <div class="col-md-12 text-center">
      {{ paginationLinks | raw }}
      
    </div>
      
  </div>
 </div>
{% endblock main %}
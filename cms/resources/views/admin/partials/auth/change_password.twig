{% extends 'admin/layout_admin.twig' %}
{% block main %}
<!-- Page Heading -->
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">
              Password Change
          </h1>
          <ol class="breadcrumb">
              <li>
                  <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
              </li>
              <li class="active">
                  <i class="fa fa-file"></i> Blank Page
              </li>
          </ol>
      </div>
  </div> 
                <!-- /.row -->
  <div class="col-xs-12">
    {% if errors is not empty %}
      <div class="alert alert-danger">
        {% for e in errors %}

          <p>{{ e[0] }}</p>

        {% endfor %}
      </div>
    {% endif %}


    <form method="post"  action="{{ path_for('user.updatePassword') }}">

      <div class="form-group">
        <label for="title">Old Password</label>
        <input type="password" class="col-xs-6 form-control" id="title" name="old-password">
      </div>
      
      <div class="form-group">
        <label for="title">New Password</label>
        <input type="password" class="col-xs-6 form-control" id="title" name="new-password" >
      </div>
      
      <div class="form-group">
        <label for="title">Confirm Password</label>
        <input type="password" class="col-xs-6 form-control" id="title" name="confirm-password">
      </div>
      
      <br><br>
     
      <button type="submit" class="btn btn-success" name="submit">Submit</button>
      {{ csrf.field | raw }}
    </form>


  </div>
{% endblock main %}

{% include 'admin/includes/admin_header.twig' %}
<body>
    {% include 'admin/flash/feedback.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default login-container">
                    <div class="panel-heading"><h3  class="text-center">Password Recovery</h3></div>
                    <div class="panel-body">
                        <div >
                          <h5>Forgot your password? Enter your email address and we'll send you a reset link.</h5>  
                        </div>
                        
                        {% if errors is not empty %}
                            <div class="alert alert-danger">
                                {% for error in errors %}  
                                    <p class="text-danger">{{ error | first }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                        
                        <form method="post"  action="/account/forgot-password" >
                           <!-- email -->
                            <div class="form-group">
                                <input type="email" class="form-control input-lg" id="email" name="recovery-email" placeholder="your email" >
                            </div>

                            <button class="btn btn-info btn-lg login" >Send reset email </button>
                        </form>
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
             </div>
             <!-- /.col-sm-4 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->


    <!-- jQuery -->
    <script src="/admin/js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/admin/js/bootstrap.min.js"></script>
    <!-- SNC JavaScript -->
    <script src="/admin/js/scripts.js"></script>

</body>

</html>

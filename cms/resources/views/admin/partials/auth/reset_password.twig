{% include 'admin/includes/admin_header.twig' %}
<body>
    {% include 'admin/flash/feedback.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default login-container">
                    <div class="panel-heading"><h3  class="text-center">Password Recovery</h3></div>
                    <div class="panel-body">
                        <div >
                          <h4>Please enter new password.</h4>  
                        </div>
                        
                        {% if errors is not empty %}
                            <div class="alert alert-danger">
                                {% for error in errors %}  
                                    <p class="text-danger">{{ error | first }}</p>
                                {% endfor %}
                            </div>
                        {% endif %}
                        
                        <form method="post"  action="/account/reset-password/{{resetToken}}" >
                           <!-- email -->
                            <div class="form-group">
                                <label>Password :</label>
                                <input type="password" class="form-control input-lg" id=",,email" name="new-password" placeholder="password" >
                            </div>

                            <div class="form-group">
                                <label>Confirm Password :</label>
                                <input type="password" class="form-control input-lg" id="email" name="confirm-password" placeholder="cpnfirm password" >
                            </div>

                            <button class="btn btn-success btn-lg login" >Send reset email </button>
                            {{ csrf.field | raw }}
                        </form>
                       
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
             </div>
             <!-- /.col-sm-4 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</body>

</html>
